<resources>

    <style name="AppTheme.Base" parent="Theme.AppCompat.NoActionBar">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:textColorHint">@color/white</item>

        <item name="android:textCursorDrawable">@null</item>

        <item name="colorPrimary">@color/light_green_700</item>
        <item name="colorPrimaryDark">@color/light_green_800</item>
        <item name="colorAccent">@color/white</item>

        <item name="android:textColor">@color/grey_800</item>

        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>

        <item name="android:itemTextAppearance">@style/CustomMenuTextApearance</item>


    </style>

    <!-- Application theme -->
    <style name="AppTheme" parent="AppTheme.Base">

    </style>

    <style name="AppThemeOptions" parent="Theme.AppCompat.Light">

    </style>


    <style name="AppOptionsTheme" parent="AppThemeOptions">

        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/grey_900</item>
        <item name="android:textColorHint">@color/grey_700</item>
        <item name="colorAccent">@color/light_green_700</item>

        <!--<item name="android:background">@color/white</item>-->

    </style>


    <!-- ======================================================================= -->

    <style name="CustomDialogTheme" parent="Theme.AppCompat.Light.Dialog">

        <!-- customize the color palette -->
        <item name="android:textColorPrimary">@color/grey_900</item>
        <item name="android:textColorSecondary">@color/grey_800</item>
        <item name="android:textColorHint">@color/grey_700</item>

        <item name="android:textColor">@color/grey_800</item>
        <item name="android:textCursorDrawable">@null</item>

        <item name="android:actionModeBackground">@color/light_green_700</item>

    </style>

    <!-- Application theme. -->
    <style name="DialogTheme" parent="CustomDialogTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <!-- ======================================================================= -->

    <style name="Divider">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:background">@color/light_green_300</item>

        <item name="android:layout_marginTop">7dp</item>
        <item name="android:layout_marginBottom">7dp</item>
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:layout_marginRight">0dp</item>

    </style>

    <!-- ======================================================================= -->

    <style name="OptionDivider">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">3dp</item>
        <item name="android:background">@color/grey_300</item>

        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:layout_marginRight">0dp</item>

    </style>

    <!-- ======================================================================= -->

    <style name="CustomMenuTextApearance" parent="@android:style/TextAppearance.Widget.IconMenu.Item">
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- ======================================================================= -->

    <style name="standard_title_text">
        <item name="android:textSize">@dimen/standard_title_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>


