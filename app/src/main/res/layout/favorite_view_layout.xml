<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        android:padding="@dimen/dialog_padding">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/favorite_title"
            android:textColor="@color/light_green_700"
            android:textSize="@dimen/title_text_size"
            android:textStyle="bold" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/body_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_layout"
        android:layout_below="@+id/title"
        android:layout_centerHorizontal="true"
        android:paddingLeft="@dimen/dialog_padding"
        android:paddingRight="@dimen/dialog_padding">

        <ListView
            android:id="@+id/favorite_list"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:choiceMode="singleChoice"
            android:divider="@color/grey_300"
            android:dividerHeight="2dp" />

        <TextView
            android:id="@+id/empty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/empty_list_text"
            android:textSize="@dimen/abc_text_size_medium_material" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/btn_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/button_bar_padding"
        android:paddingLeft="@dimen/dialog_padding"
        android:paddingRight="@dimen/dialog_padding"
        android:paddingTop="@dimen/button_bar_padding">

        <ImageButton
            android:id="@+id/btn_add"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_add_black_48dp"
            android:tint="@color/grey_800"
            android:visibility="gone" />

        <ImageButton
            android:id="@+id/btn_close"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_arrow_back_black_48dp"
            android:tint="@color/grey_800" />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/layout_options"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:clickable="true"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#99000000">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/option_view"
                android:layout_marginBottom="5dp"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingBottom="@dimen/button_bar_padding"
                android:paddingLeft="@dimen/dialog_padding"
                android:paddingRight="@dimen/dialog_padding"
                android:paddingTop="@dimen/button_bar_padding">

                <EditText
                    android:id="@+id/txtEdit_meaning"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:minLines="5"
                    android:textSize="@dimen/details_meaning"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/txtView_meaning"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:minLines="5"
                    android:textSize="@dimen/details_meaning"
                    android:visibility="visible" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/option_view"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@color/white"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/button_bar_padding"
                android:paddingLeft="@dimen/dialog_padding"
                android:paddingRight="@dimen/dialog_padding"
                android:paddingTop="@dimen/button_bar_padding">

                <ImageButton
                    android:id="@+id/btn_delete_meaning_part"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/ic_delete_black_48dp"
                    android:tint="@color/red_700" />

                <ImageButton
                    android:id="@+id/btn_edit"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/ic_edit_black_48dp"
                    android:tint="@color/grey_800" />

                <ImageButton
                    android:id="@+id/btn_close_options"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/ic_arrow_back_black_48dp"
                    android:tint="@color/grey_800" />

            </LinearLayout>


        </RelativeLayout>


    </FrameLayout>

</RelativeLayout>