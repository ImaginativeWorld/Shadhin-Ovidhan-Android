    <LinearLayout
        android:id="@+id/btn_layout"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dialog_button_bar_height"
        android:layout_alignParentBottom="true"
        android:gravity="end|center_horizontal"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dialog_button_bar_button_margin"
        android:paddingRight="@dimen/dialog_button_bar_button_margin">

        <ImageButton
            android:id="@+id/btn_options"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="@dimen/action_button_height"
            android:layout_height="@dimen/action_button_width"
            android:background="?attr/selectableItemBackground"
            android:padding="12dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_more_vert_black_24dp"
            android:tint="?attr/colorAccent" />

        <ImageButton
            android:id="@+id/btn_favorite"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="@dimen/action_button_height"
            android:layout_height="@dimen/action_button_width"
            android:background="?attr/selectableItemBackground"
            android:padding="12dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_favorite_border_black_24dp"
            android:tint="?attr/colorAccent" />

        <ImageButton
            android:id="@+id/btn_speak"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="@dimen/action_button_height"
            android:layout_height="@dimen/action_button_width"
            android:background="?attr/selectableItemBackground"
            android:padding="12dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_volume_up_black_24dp"
            android:tint="?attr/colorAccent" />

        <ImageButton
            android:id="@+id/btn_close"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="@dimen/action_button_height"
            android:layout_height="@dimen/action_button_width"
            android:background="?attr/selectableItemBackground"
            android:padding="12dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_arrow_back_black_24dp"
            android:tint="?attr/colorAccent" />

    </LinearLayout>

</RelativeLayout>