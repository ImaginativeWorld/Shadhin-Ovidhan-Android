                    android:id="@+id/meaning_list_0"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:choiceMode="singleChoice"
                    android:divider="@color/grey_300"
                    android:dividerHeight="1dp" />

