<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/dialog_padding"
        android:layout_alignParentTop="true"
        android:id="@+id/title">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/view_details_title"
            android:textSize="@dimen/title_text_size"
            android:textColor="@color/light_green_700"
            android:textStyle="bold"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dialog_padding"
        android:paddingRight="@dimen/dialog_padding"
        android:id="@+id/body_layout"
        android:layout_below="@+id/title"
        android:layout_above="@+id/btn_layout"
        android:layout_centerHorizontal="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_word"
            android:textSize="@dimen/details_word"
            android:text="Word"
            android:textStyle="bold"
            android:textColor="@color/grey_800"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_pos"
            android:textSize="@dimen/details_pos"
            android:text="pos"
            android:textStyle="italic"/>

        <View style="@style/Divider"/>

        <ListView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/meaning_list"
            android:dividerHeight="2dp"
            android:divider="@color/grey_300"
            android:choiceMode="singleChoice"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingTop="@dimen/button_bar_padding"
        android:paddingBottom="@dimen/button_bar_padding"
        android:paddingLeft="@dimen/dialog_padding"
        android:paddingRight="@dimen/dialog_padding"
        android:layout_alignParentBottom="true"
        android:id="@+id/btn_layout">

        <ImageButton
            android:src="@drawable/ic_delete_black_48dp"
            android:tint="@color/red_700"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            style="?android:attr/borderlessButtonStyle"
            android:id="@+id/btn_delete_entry" />

        <ImageButton
            android:id="@+id/btn_add"
            android:src="@drawable/ic_add_black_48dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            style="?android:attr/borderlessButtonStyle"
            android:tint="@color/grey_800"/>

        <ImageButton
            android:id="@+id/btn_close"
            android:src="@drawable/ic_arrow_back_black_48dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            style="?android:attr/borderlessButtonStyle"
            android:tint="@color/grey_800"/>

    </LinearLayout>

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:visibility="gone"
        android:id="@+id/layout_options"
        android:clickable="true">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#99000000">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/option_view"
                android:background="@color/white"
                android:paddingTop="@dimen/button_bar_padding"
                android:paddingBottom="@dimen/button_bar_padding"
                android:paddingLeft="@dimen/dialog_padding"
                android:paddingRight="@dimen/dialog_padding"
                android:layout_marginBottom="5dp"
                android:orientation="vertical">

                <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:minLines="5"
                    android:id="@+id/txtEdit_meaning"
                    android:textSize="@dimen/details_meaning"
                    android:visibility="gone" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:minLines="5"
                    android:id="@+id/txtView_meaning"
                    android:textSize="@dimen/details_meaning"
                    android:visibility="visible" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:paddingTop="@dimen/button_bar_padding"
                android:paddingBottom="@dimen/button_bar_padding"
                android:paddingLeft="@dimen/dialog_padding"
                android:paddingRight="@dimen/dialog_padding"
                android:layout_alignParentBottom="true"
                android:background="@color/white"
                android:id="@+id/option_view">

                <ImageButton
                    android:src="@drawable/ic_delete_black_48dp"
                    android:tint="@color/red_700"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    style="?android:attr/borderlessButtonStyle"
                    android:id="@+id/btn_delete_meaning_part" />

                <ImageButton
                    android:src="@drawable/ic_edit_black_48dp"
                    android:tint="@color/grey_800"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    style="?android:attr/borderlessButtonStyle"
                    android:id="@+id/btn_edit" />

                <ImageButton
                    android:src="@drawable/ic_arrow_back_black_48dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    style="?android:attr/borderlessButtonStyle"
                    android:tint="@color/grey_800"
                    android:id="@+id/btn_close_options" />

            </LinearLayout>


        </RelativeLayout>


    </FrameLayout>

</RelativeLayout>